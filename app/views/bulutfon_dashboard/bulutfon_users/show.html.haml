- content_for :toolbar do
  - if @resource.present?
    = link_to edit_bulutfon_users_path, class: 'btn btn-default' do
      %i.icon-plus
      = t('view.edit')
    = link_to bulutfon_users_path, method: :delete, class: 'btn btn-warning' do
      %i.icon-trash
      = t('view.destroy')
.panel.panel-default.grid
  .panel-heading
    %i.fa.fa-table.icon-large
    = t('tt.show', resource_name: BulutfonDashboard::BulutfonUser.model_name.human)
  .panel-body
    - if @resource.present?
      = show_for @resource do |s|
        = s.attribute :api_token
        = s.attribute :sms_title

    - else
      .alert.alert-warning
        %p
          %h3.center= t('activerecord.attributes.bulutfon_user.blank')
          = link_to new_bulutfon_users_path, class: 'btn btn-success' do
            %i.fa.fa-plus
            = t('view.create')